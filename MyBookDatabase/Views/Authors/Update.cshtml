@using MyBookDatabase.DTO
@model AuthorDTO
<div>
	<h4>Update an author</h4>
	<form asp-action="Update">
		<div class="form-group">
			<label asp-for="Name"></label>
			<input type="text" asp-for="Name" class="form-control" required />
		</div>
		<div class="form-group">
			<label asp-for="DateOfBirth"></label>
			<input type="date" asp-for="DateOfBirth" class="form-control" required />
		</div>
		<div class="form-group">
			<label asp-for="DateOfDeath"></label>
			<input type="date" asp-for="DateOfDeath" class="form-control" />
		</div>
		<div class="form-group">
			<label asp-for="Bio"></label>
			<textarea asp-for="Bio" class="form-control" required></textarea>
		</div>
		<div>
			<input class="btn btn-success" type="submit" value="Update" />
		</div>
	</form>
</div> 